@model FilmsCatalog.ViewModels.Film.FilmViewModel
@{
    ViewData["Title"] = "Удалить фильм";
}

<form asp-controller="Film" asp-action="Delete" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <div class="card mb-3" style="width: 100%">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@(Model.Poster?.Path ?? Url.Content("/files/no-image.png"))" class="card-img-top" alt="poster">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name (@Model.ProductionYear), @Model.Producer</h5>
                    <p class="card-text">@Model.Description</p>
                    <button type="submit" class="btn btn-danger">Удалить</button>
                    <a asp-action="Index" asp-controller="Film" class="btn btn-outline-primary">Отмена</a>
                </div>
            </div>
        </div>
    </div>
</form>
